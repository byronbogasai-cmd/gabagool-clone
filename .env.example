# Polymarket API credentials
# Get these from https://polymarket.com/settings after connecting your wallet
POLY_API_KEY=your_api_key_here
POLY_API_SECRET=your_api_secret_here
POLY_API_PASSPHRASE=your_passphrase_here
POLY_PRIVATE_KEY=your_wallet_private_key_here

# Wallet address (public, no secret)
POLY_WALLET_ADDRESS=0xyour_wallet_address_here

# Bot configuration
MIN_SPREAD=0.030         # Minimum UP+DOWN gap to trigger trade (3%)
MAX_POSITION_SIZE=0.80   # Max % of capital per trade (80%)
COMPOUND=true            # Reinvest profits automatically
LOG_LEVEL=INFO
